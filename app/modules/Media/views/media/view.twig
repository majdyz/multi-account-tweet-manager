{% extends 'admin/index.twig' %}
{% block content %}
<ul class="breadcrumb">
    <li><a href="../../../admin">Dashboard</a></li>
    <li><a href="../media">Media</a></li>
    <li class="active">{{ title }}</li>
</ul>
<div class="row page-header-box">
    <div class="col-xs-10">
        <h3>{{ title }}</h3>
    </div>
    <div class="col-xs-2">
        <a onclick="if (confirm('Are you sure want to delete this user?') == false) return false" href="destroy/{{ model.id }}" class="btn btn-danger btn-sm pull-right"><i class="fa fa-trash-o"></i> Delete media</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-hover ">
                <tbody>
                    <tr>
                        <td>Name</td>
                        <td>{{ model.name }}</td>
                    </tr>
                    <tr>
                        <td>Media Url</td>
                        <td>{{ model.url }}</td>
                    </tr>
                    <tr>
                        <td>Created At</td>
                        <td>{{ model.created_at }}</td>
                    </tr>
                    <tr>
                        <td>Updated At</td>
                        <td>{{ model.updated_at }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}