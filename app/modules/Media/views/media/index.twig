{% extends 'admin/index.twig' %}
{% block content %}
<ul class="breadcrumb">
    <li><a href="../admin">Dashboard</a></li>
    <li class="active">{{ title }}</li>
</ul>
<div class="row page-header-box">
    <div class="col-xs-10">
        <h3>{{ title }}</h3>
    </div>
    <div class="col-xs-2">
        <a href="media/create" id="btn-user-add" class="btn btn-success btn-sm pull-right"><i class="fa fa-plus"></i> Add Media</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Url</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th style="width:15%" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody id="user-table">
                    {% for i, media in medias %}
                    <tr id="user-row-{{ user.id }}">
                        <td>{{ i+1 }}</td>
                        <td>{{ media.name }}</td>
                        <td>{{ media.url }}</td>
                        <td>{{ media.created_at }}</td>
                        <td>{{ media.updated_at }}</td>
                        <td class="text-center">
                            <a class="btn btn-xs btn-primary btn-user-view" href="media/{{ media.id }}"><i class="fa fa-eye fa-fw"></i></a>
                            <a onclick="if (confirm('Are you sure want to delete this media?') == false) return false" class="btn btn-xs btn-danger btn-user-delete" href="media/destroy/{{ media.id }}"><i class="fa fa-times fa-fw"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}