{% extends 'admin/index.twig' %}
{% block content %}
<ul class="breadcrumb">
    <li><a href="../../../admin">Dashboard</a></li>
    <li><a href="../../tweetset">Tweetset</a></li>
    <li class="active">{{ title }}</li>
</ul>

<div class="row page-header-box">
    <div class="col-xs-10">
        <h3>{{ title }}</h3>
    </div>
    <div class="pull-right">
        <div class = "row">
            <a href="#" id="btn-tweet-add" class="btn btn-success btn-sm"><i class="fa fa-plus"></i> Add tweet</a>
            <a href="../random-tweet/{{tweetset_id}}" class="btn btn-danger  btn-sm" ><i class="fa fa-fire"></i> Randomize </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Text</th>
                        <th>Media</th>
                        <th>Created At</th>
                        <th style="width:20%" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody id="tweet-table">
                    {% for tweet in tweets %}
                    <tr id="tweet-row-{{ tweet.id }}">
                        <td>{{ tweet.name }}</td>
                        <td>{{ tweet.text }}</td>
                        <td>{{ tweet.media }}</td>
                        <td>{{ tweet.created_at }}</td>
                        <td class="text-center">
                            <a data-id="{{ tweet.id }}" class="btn btn-xs btn-primary btn-tweet-edit" href="#"><i class="fa fa-edit fa-fw"></i>Edit</a>
                            <a data-id="{{ tweet.id }}" class="btn btn-xs btn-danger btn-tweet-delete" href="#"><i class="fa fa-times fa-fw"></i>Remove</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="tweet-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modal-title">Tweet Form</h4>
            </div>
            <form role="form" class="form-horizontal" id="tweet-form-data">
                <div class="modal-body">
                    {% include '@tweet/tweet/form.twig' %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success btn-sm" id="btn-tweet-save" data-method="">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}