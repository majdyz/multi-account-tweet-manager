{% extends 'admin/index.twig' %}
{% block content %}
<ul class="breadcrumb">
    <li><a href="../admin">Dashboard</a></li>
    <li class="active">{{ title }}</li>
</ul>

<div class="row page-header-box">
    <div class="col-xs-10">
        <h3>{{ title }}</h3>
    </div>
    <div class="col-xs-2">
        <a href="#" id="btn-tweetset-add" class="btn btn-success btn-sm pull-right"><i class="fa fa-plus"></i> Add tweetset</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>User Involved</th>
                        <th>Updated At</th>
                        <th>Created At</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody id="tweetset-table">
                    {% for tweetset in tweetsets %}
                    <tr id="tweetset-row-{{ tweetset.id }}">
                        <td>{{ tweetset.id }}</td>
                        <td>{{ tweetset.name }}</td>
                        <td>{{ tweetset.user_involved }}</td>
                        <td>{{ tweetset.updated_at }}</td>
                        <td>{{ tweetset.created_at }}</td>
                        <td class="text-center">
                            <a data-id="{{ tweetset.id }}" class="btn btn-xs btn-warning btn-tweetset-random" href="tweetset/random-tweet/{{tweetset.id}}"><i class="fa fa-fire fa-fw"></i>Randomize</a>
                            <a data-id="{{ tweetset.id }}" class="btn btn-xs btn-success btn-tweetset-view" href="tweetset/show-tweet/{{tweetset.id}}"><i class="fa fa-comment fa-fw"></i>Tweets</a>
                            <a data-id="{{ tweetset.id }}" class="btn btn-xs btn-primary btn-tweetset-edit" href="#"><i class="fa fa-edit fa-fw"></i>Edit</a>
                            <a data-id="{{ tweetset.id }}" class="btn btn-xs btn-danger btn-tweetset-delete" href="#"><i class="fa fa-times fa-fw"></i>Remove</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="tweetset-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modal-title">Tweetset Form</h4>
            </div>
            <form role="form" class="form-horizontal" id="tweetset-form-data">
                <div class="modal-body">
                    {% include '@tweetset/tweetset/form.twig' %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success btn-sm" id="btn-tweetset-save" data-method="">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}