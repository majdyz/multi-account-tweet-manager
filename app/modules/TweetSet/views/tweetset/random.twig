{% extends 'admin/index.twig' %}
{% block content %}

<div class="row page-header-box">
    <ul class="breadcrumb">
        <li><a href="../../../admin">Dashboard</a></li>
        <li><a href="../../tweetset">Tweetset</a></li>
        <li class="active">{{ title }}</li>
    </ul>
    <div class="col-xs-10">
        <h3>{{ title }}</h3>
    </div>
</div>
<div class = "col-lg-6">
    {% if error %}
        <div class = "well">
            <h4 > {{ error }} </h4>
            <a href="../../twitter-account" class ="btn btn-primary"> Register your Twitter accounts</a>
        </div>
    {% else %}
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Account</th>
                                <th>Will Tweet</th>
                            </tr>
                        </thead>
                        <tbody id="random-table">
                            {% for random in random_result %}
                            <tr id="random-row-{{ random.id }}">
                                <td>{{ loop.index }}</td>
                                <td>{{ random.account.username }}</td>
                                <td>{{ random.tweet.name }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <a href="" id="btn-random-rerandom" class="btn btn-danger btn-sm pull-right"><i class="fa fa-fire"></i> Reshuffle </a>
            <a href="#" id="btn-random-post" class="btn btn-primary btn-sm pull-right"><i class="fa fa-twitter"></i> Tweet Now </a>
        </div>
    {% endif %}
</div>
<div class="col-lg-12" id="realtime-report" style="display: none">
    <div class="panel panel-material-blue-grey">

        <div class="panel-heading">
            <h3 class="panel-title">Tweeting Progress</h3>
        </div>

        <div class="progress progress-striped active"> 
            <div class="progress-bar progress-bar-material-grey" id="progress-bar" style="width: 11.2%;"></div>
        </div>

        <div class="panel-body">
            <ul id="progress-report">
                <li> asdsad </li>
                <li> asdas </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}