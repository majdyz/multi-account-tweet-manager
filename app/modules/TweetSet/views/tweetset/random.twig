{% extends 'admin/index.twig' %}
{% block content %}

<div class="row page-header-box">
    <ul class="breadcrumb">
        <li><a href="../../../admin">Dashboard</a></li>
        <li><a href="../../tweetset">Tweetset</a></li>
        <li class="active">{{ title }}</li>
    </ul>
    <div class="col-xs-10">
        <h3>{{ title }}</h3>
    </div>
</div>
<div class = "col-lg-6">
    {% if error %}
        <div class = "well">
            <h4 > {{ error }} </h4>
            <a href="../../tweetset" class ="btn btn-primary"> Back to yout tweetset </a>
        </div>
    {% else %}
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Account</th>
                                <th>Tweet</th>
                            </tr>
                        </thead>
                        <tbody id="random-table">
                            {% for random in random_result %}
                            <tr id="random-row-{{ random.id }}">
                                <td>{{ loop.index }}</td>
                                <td>{{ random.account.username }}</td>
                                <td>{{ random.tweet.name }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <a href="" id="btn-random-rerandom" class="btn btn-danger btn-sm pull-right"><i class="fa fa-fire"></i> Random </a>
            <a href="#" id="btn-random-post" class="btn btn-primary btn-sm pull-right"><i class="fa fa-twitter"></i> Tweet  </a>
        </div>
    {% endif %}
</div>
{% endblock %}