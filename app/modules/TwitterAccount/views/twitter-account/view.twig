{% extends 'admin/index.twig' %}
{% block content %}
<ul class="breadcrumb">
    <li><a href="../../../admin">Dashboard</a></li>
    <li><a href="../twitter-account">Twitter Account</a></li>
    <li class="active">{{ title }}</li>
</ul>
<div class="row page-header-box">
    <div class="col-xs-10">
        <h3>{{ title }}</h3>
    </div>
    <div class="col-xs-2">
        <a onclick="if (confirm('Are you sure want to delete this user?') == false) return false" href="../delete/{{ user.id }}" class="btn btn-danger btn-sm pull-right"><i class="fa fa-trash-o"></i> Delete User</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-hover ">
                <tbody>
                    <tr>
                        <td>Username</td>
                        <td>@{{ user.username }}</td>
                    </tr>
                    <tr>
                        <td>Status</td>
                        <td>{{ user.statusPretty }}</td>
                    </tr>
                    <tr>
                        <td>OAuth Token</td>
                        <td>{{ user.oauth_token }}</td>
                    </tr>
                    <tr>
                        <td>OAuth Token Secret</td>
                        <td>{{ user.oauth_token_secret }}</td>
                    </tr>
                    <tr>
                        <td>Joined At</td>
                        <td>{{ user.joinedAtPretty }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}