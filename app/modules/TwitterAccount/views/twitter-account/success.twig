{% extends 'master.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h3 class="page-header">{{ title }}</h3>
            You have been joined to CompFest7 Tweet Manager.
            <br /><br />
        </div>
        <div class="row text-center">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="table-responsive">
                    <table class="table table-striped table-hover ">
                        <tbody>
                            <tr>
                                <td>Username</td>
                                <td>@{{ account.username }}</td>
                            </tr>
                            <tr>
                                <td>Joined At</td>
                                <td>{{ account.joinedAtPretty }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="text-center">
            <a href="{{ siteUrl('logout') }}" class="btn btn-success btn-sm">Logout</a>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
{% endblock %}