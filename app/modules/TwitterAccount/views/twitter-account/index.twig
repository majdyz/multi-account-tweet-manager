{% extends 'admin/index.twig' %}
{% block content %}
<ul class="breadcrumb">
    <li><a href="../admin">Dashboard</a></li>
    <li class="active">{{ title }}</li>
</ul>
<div class="row page-header-box">
    <div class="col-xs-10">
        <h3>{{ title }}</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Name</th>
                        <th>Joined At</th>
                        <th style="width:15%" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody id="user-table">
                    {% for i, user in users %}
                    <tr id="user-row-{{ user.id }}">
                        <td>{{ i+1 }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.joinedAtPretty }}</td>
                        <td class="text-center">
                            <a class="btn btn-xs btn-primary btn-user-view" href="twitter-account/show/{{ user.id }}"><i class="fa fa-eye fa-fw"></i>View</a>
                            <a onclick="if (confirm('Are you sure want to delete this user?') == false) return false" class="btn btn-xs btn-danger btn-user-delete" href="twitter-account/destroy/{{ user.id }}"><i class="fa fa-times fa-fw"></i>Remove</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}