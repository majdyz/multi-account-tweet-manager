<input type="hidden" id="user_id" name="id">

<div class="form-group">
    <label for="user_username" class="col-lg-12 control-label">Username</label>
    <div class="col-lg-12">
        <input type="text" class="input-sm form-control validate[required]" name="username" id="user_username" placeholder="Username" required>
    </div>
</div>

<div class="form-group">
    <label for="first_name" class="col-lg-12 control-label">First Name</label>
    <div class="col-lg-12">
        <input type="text" class="input-sm form-control validate[required]" name="first_name" id="user_first_name" placeholder="First Name" required>
    </div>
</div>

<div class="form-group">
    <label for="last_name" class="col-lg-12 control-label">Last Name</label>
    <div class="col-lg-12">
        <input type="text" class="input-sm form-control" name="last_name" id="user_last_name" placeholder="Last Name">
    </div>
</div>

<div class="form-group">
    <label for="password" class="col-lg-12 control-label">Password</label>
    <div class="col-lg-12">
        <input type="password" class="input-sm form-control validate[required,minSize[6],maxSize[50]]" name="password" id="password" placeholder="Password" required>
    </div>
</div>

<div class="form-group">
    <label for="confirm_password" class="col-lg-12 control-label">Confirm Password</label>
    <div class="col-lg-12">
        <input type="password" class="input-sm form-control validate[required,equals[password]]" name="confirm_password" id="confirm_password" placeholder="Confirm password" required>
    </div>
</div>